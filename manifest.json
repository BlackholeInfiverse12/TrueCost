{
  "manifest_version": 3,
  "name": "TrueCost - Hidden Fee Detector",
  "version": "1.0.0",
  "description": "Detect and reveal hidden fees, convenience charges, and markups during online payments",
  "permissions": ["activeTab", "storage", "notifications", "scripting"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*checkout*",
        "*://*/*cart*",
        "*://*/*payment*",
        "*://*/*billing*",
        "*://*/pay*",
        "*://*/*order*"
      ],
      "js": ["contentScript.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrueCost - Check Hidden Fees",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
